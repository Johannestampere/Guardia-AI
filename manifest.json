{
  "manifest_version": 3,
  "name": "Fraud Protector",
  "description": "Protects elderly users from fraud using AI and voice alerts.",
  "version": "1.0",

  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "build/index.html"
  }
}
