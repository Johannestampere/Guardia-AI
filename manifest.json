{
  "manifest_version": 3,
  "name": "Fraud Protector",
  "description": "Protects elderly users from fraud using AI and voice alerts.",
  "version": "1.0",

  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>",
    "http://localhost:5001/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "build/index.html"
  }
}
